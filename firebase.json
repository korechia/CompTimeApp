{
  "functions": {
    "source": "functions"
  },
  "emulators": {
    "functions": {
      "port": 5004
    },
    "database": {
      "port": 5003
    },
    "ui": {
      "enabled": true,
      "port": 5001
    },
    "hosting": {
      "port": 5002
    }
  },
  "hosting": {
    "public": "/src",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
